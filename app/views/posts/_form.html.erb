<%= form_for(@post, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @post.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h4>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Body Section 1:</label>
      <div class="col-sm-10">
        <%= f.text_area :body, :id => "postbody" %>
      </div>
    </div>



    <div class="form-group">
      <label class="col-sm-2 control-label">Body Section 2:</label>
      <div class="col-sm-10">
        <%= f.text_area :body2, :id => "postbody2" %>
      </div>
    </div>
  <div class="form-group">
    <%= f.label :published_at, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :published_at, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :post_type, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :post_type, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :on_homepage, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :on_homepage, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :event_location, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :event_location, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :event_link, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :event_link, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :is_event, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :is_event, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :event_date, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :event_date, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :event_time, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.time_select :event_time, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>


<script>



    $(function() {
        $('#postbody, #postbody2').froalaEditor({
            toolbarButtons: ['fullscreen', 'bold', 'italic', 'underline', 'strikeThrough', 'subscript', 'superscript', 'fontFamily', 'fontSize', '|', 'color', 'emoticons', 'inlineStyle', 'paragraphStyle', '|', 'paragraphFormat', 'align', 'formatOL', 'formatUL', 'outdent', 'indent', 'quote', 'insertHR', '-', 'insertLink', 'insertImage', 'insertVideo', 'insertFile', 'insertTable', 'undo', 'redo', 'clearFormatting', 'selectAll', 'html'],
            heightMin: 100,
            heightMax: 600
        })
    });


</script>