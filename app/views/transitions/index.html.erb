<div class="page-header">
  <%= link_to new_transition_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Transition
  <% end %>
  <h1>Listing transitions</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @transitions) do |transition| %>
            <td><%= transition.name %></td>
            <td><%= link_to 'Show', transition %></td>
        <td><%= link_to 'Edit', edit_transition_path(transition) %></td>
        <td><%= link_to 'Destroy', transition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
