<%= form_for(@site_image, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @site_image.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@site_image.errors.count, "error") %> prohibited this site_image from being saved:</h4>

      <ul>
      <% @site_image.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


    <div class="form-group">
      <%= f.label "Image Name", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>


    <div class="form-group">
      <%= f.label "Caption", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_area :caption, class: "form-control" %>
      </div>
    </div>


    <div class="form-group">
      <%= f.label "Source", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :image_source, class: "form-control" %>
      </div>
    </div>



    <div class="form-group">
      <%= f.label "Image", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= image_tag @site_image.image.url, :width => "100", :class => "pull-left" %>
      </div>
    </div>




    <div class="form-group">
      <%= f.label 'Replace', :class => "col-sm-2 control-label" %>
      <div class="col-sm-4">
        <%= f.file_field :image, :class => "form-control" %>
      </div>
    </div>



  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
