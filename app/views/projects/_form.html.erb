<%= form_for(@project, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @project.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h4>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

    <div class="form-group">
      <%= f.label :description, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_area :description, :id => "projectdesc", :cols => "100", :rows => "15", :class => "form-control" %>

      </div>
    </div>

  <div class="form-group">
    <%= f.label :partners, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :partners, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :country_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :country_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :projectstatus_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :projectstatus_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :publish, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :publish, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :project_start, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :project_start, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :project_end, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :project_end, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>




